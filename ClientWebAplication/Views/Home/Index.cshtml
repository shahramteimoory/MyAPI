@using ClientWebAplication.Models.Customers
@using ClientWebAplication.Dto
@model ResultDto<List<Customer>>
@{
    ViewData["Title"] = "Home Page";
    int rowCount = 1;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>LastName</th>
        <th>Email</th>
        <th>Phone</th>
        <th><a asp-action="AddCustomer" class="btn btn-success">AddNewCustomer</a></th>
    </tr>
    @if (Model.IsSuccess)
    {
        @foreach (var item in Model.Data)
        {
            
            <tr>
                <td>@rowCount</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>
                    <a href="~/Home/EditCustomer?Id=@item.id" class="btn btn-warning">Edit</a>
                    <a href="~/Home/DeleteCustomer?id=@item.id" class="btn btn-danger">Delete</a>
                </td>
                
            </tr>
            rowCount++;
        }
    }
</table>
